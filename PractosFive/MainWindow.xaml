<Window x:Class="PractosFive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PractosFive"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Логин:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="LoginBox" Grid.Row="1" VerticalAlignment="Center"/>
        <Label Content="Пароль:" Grid.Row="2" VerticalAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" VerticalAlignment="Center"/>
        <Button Grid.Row="5" Content="Авторизоваться" Click="Button_Click"/>
    </Grid>
</Window>
